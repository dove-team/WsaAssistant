<Window xmlns:local="clr-namespace:WSATools"  x:Class="WSATools.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        ResizeMode="NoResize" xmlns:vm="clr-namespace:WSATools.ViewModels"
        mc:Ignorable="d" WindowStartupLocation="CenterScreen" WindowStyle="None"
        Title="WSATools" Height="450" Width="780">
    <Window.DataContext>
        <vm:MainWindowViewModel x:Name="viewModel" />
    </Window.DataContext>
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:CallMethodAction MethodName="LoadAsync" TargetObject="{Binding}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>
    <Grid>
        <Grid Margin="12">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="8" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Border Grid.Row="0">
                <StackPanel Orientation="Horizontal">
                    <Image Width="48" Source="images/Icon.png" />
                    <TextBlock VerticalAlignment="Center" FontWeight="Bold" FontSize="24" Text="WSA助手" Margin="24,0,0,0" />
                </StackPanel>
            </Border>
            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="8" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="12" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="0">
                    <TextBlock Text="windows依赖状态：" />
                    <TextBlock Text="{Binding VMState}" Foreground="DarkRed" />
                    <Button Content="安装" IsEnabled="{Binding VMEnable}" Width="100"
                        Command="{Binding InstallVmCommand}" Margin="24,0,0,0" />
                </StackPanel>
                <StackPanel Orientation="Horizontal" Grid.Row="2" Grid.Column="0">
                    <TextBlock>
                    <Run Text="安装状态：" />
                    <Run xml:space="preserve" Text="             " />
                    </TextBlock>
                    <TextBlock Text="{Binding WSAState}" Foreground="DarkRed" />
                    <Button Content="安装" IsEnabled="{Binding WSAEnable}" Command="{Binding InstallWSACommand}"
                        Margin="24,0,0,0" Width="100" />
                </StackPanel>
                <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="2">
                    <Button IsEnabled="{Binding ToolEnable}" Command="{Binding InstallToolCommand}" Content="安装ApkInstall" Width="140" />
                    <TextBlock Margin="8,0,0,0" Foreground="DarkRed" Text="可能由于Github源的原因初始化失败" />
                </StackPanel>
                <StackPanel Orientation="Horizontal" Grid.Row="2" Grid.Column="2">
                    <Button IsEnabled="{Binding WSARemoveable}" Command="{Binding UninstallCommand}" Content="卸载WSA环境" Width="140" />
                    <TextBlock Margin="8,0,0,0">
                    <Run>下载进度：</Run>
                    <Run Text="{Binding ProcessVal}" />
                    <Run>%</Run>
                    </TextBlock>
                </StackPanel>
            </Grid>
            <Grid Grid.Row="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="8" />
                    <ColumnDefinition Width=".5*" />
                </Grid.ColumnDefinitions>
                <ListView Grid.Column="0" ItemsSource="{Binding Packages}" SelectedItem="{Binding SelectPackage}">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Content}" />
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
                <Grid Grid.Column="2" Margin="8">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding WSARunState}" />
                        <Button Margin="24,0,0,0" Content="启动WSA" Visibility="{Binding WSAStart}" Command="{Binding StartWSACommand}" />
                    </StackPanel>
                    <TextBlock Text="搜索包：" Grid.Row="1" />
                    <StackPanel Orientation="Horizontal" Grid.Row="2" Margin="0,12,0,0">
                        <TextBox Width="160" Text="{Binding SearchKeywords,Mode=TwoWay}" />
                        <Button Content="搜索" Margin="12,0,0,0" IsEnabled="{Binding WSARun,UpdateSourceTrigger=PropertyChanged}" Command="{Binding SearchCommand}" />
                    </StackPanel>
                    <Grid Grid.Row="3" Margin="0,12,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="12" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Button Content="安装" IsEnabled="{Binding WSARun,UpdateSourceTrigger=PropertyChanged}" Command="{Binding InstallApkCommand}" />
                        <Button Content="降级" IsEnabled="{Binding WSARun,UpdateSourceTrigger=PropertyChanged}" Grid.Column="2" Command="{Binding DowngradeCommand}" />
                    </Grid>
                    <Grid Grid.Row="4" Margin="0,12,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="12" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Button Content="刷新" IsEnabled="{Binding WSARun,UpdateSourceTrigger=PropertyChanged}" Command="{Binding RefreshCommand}" />
                        <Button Content="卸载" IsEnabled="{Binding WSARun,UpdateSourceTrigger=PropertyChanged}" Grid.Column="2" Command="{Binding UninstallApkCommand}" />
                    </Grid>
                    <Button Content="关闭" Command="{Binding CloseCommand}" Grid.Row="5"
                        VerticalAlignment="Bottom" HorizontalAlignment="Right" />
                </Grid>
            </Grid>
        </Grid>
        <Popup x:Name="loading" Width="100" Height="100" Placement="Center">
            <local:Loading Visibility="{Binding LoadVisable}" Width="100" Height="100" />
        </Popup>
    </Grid>
</Window>