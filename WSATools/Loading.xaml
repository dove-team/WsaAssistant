<UserControl x:Class="WSATools.Loading"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
            xmlns:hc="https://handyorg.github.io/handycontrol"
             mc:Ignorable="d" Background="#f4f4f4"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="16" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <hc:GifImage Grid.Row="1" x:Name="GifImageMain" Stretch="None" Margin="32" Uri="/WSATools;component//images/loading.gif"/>
        <TextBlock x:Name="txtValue" Text="{DynamicResource Loading}" Grid.Row="3" HorizontalAlignment="Center" />
    </Grid>
</UserControl>
